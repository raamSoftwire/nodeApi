{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "ignorePatterns": ["test/","migrations/", "node_modules/"],
    "rules": {
        "semi": [2, "never"],
        "quotes": ["error" ,"single", { "allowTemplateLiterals": true }],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
        "eol-last": ["error", "always"],
        "no-var": "error"
    }
}